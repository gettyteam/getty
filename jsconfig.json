{
  "compilerOptions": {
    "paths": {
      "@/*": ["./frontend/src/*"],
      "shared-i18n/*": ["./shared-i18n/*"]
    },
    "moduleResolution": "node",
    "target": "ES2022",
    "jsx": "preserve",
    "types": ["node"],
    "ignoreDeprecations": "6.0"
  },
  "include": [
    "frontend/src/**/*",
    "admin-frontend/src/**/*",
    "public/js/**/*.js",
    "scripts/**/*",
    "modules/**/*",
    "routes/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    "dist-frontend/**/*",
    "public/js/min/**/*"
  ],
  "vueCompilerOptions": {
    "globalTypesPath": "frontend/types/vue-global.d.ts"
  }
}
